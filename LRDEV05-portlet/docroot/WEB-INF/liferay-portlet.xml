<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.1.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_1_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>lrdev05</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>sample.lrdev05.util.ConfigurationActionImpl</configuration-action-class>
		<asset-renderer-factory>sample.lrdev05.database.asset.SloganAssetRendererFactory</asset-renderer-factory>
		<instanceable>false</instanceable>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<header-portlet-javascript>http://code.jquery.com/jquery-1.4.3.min.js</header-portlet-javascript>
		<footer-portlet-javascript>/js/main.js</footer-portlet-javascript>
		<css-class-wrapper>lrdev05-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>